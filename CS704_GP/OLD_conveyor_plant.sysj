reaction ch_to_sig(: input Boolean channel ch_in, output signal sig_out) // doesn't compile with sysimport
{
	while(true) {
		{
			receive ch_in;
		}
		||
		{
			while(true) {
				if(#ch_in) {
					emit sig_out;
				}
				pause;
			} 
		}
	}
}

conveyor_plant(
		input Boolean channel motConveyorOnOff;
		output signal conveyorRunning;
		
		)
->
{
	ch_to_sig(:motConveyorOnOff, conveyorRunning);
}