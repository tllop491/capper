conveyor_controller(		
		input signal bottleAtPos1c, bottleLeftPos5; 
		
		output signal motConveyorOnOff;
		output Boolean channel readyConveyor;
		)
->{
	send readyConveyor(Boolean.TRUE);
	{
		while(true) {
			sustain motConveyorOnOff;	// assuming non-pipelined for now, conveyor stays on
		};
	}
	||
	{
		while(true) {
			present(!motConveyorOnOff){
				System.out.println("CONVEYOR OFF");
			}
			pause;
		}
	}
}